    <!-- Load JS in frontend assets -->
    <template id="assets_frontend" inherit_id="web.assets_frontend" name="Captcha Assets">
        <xpath expr="." position="inside">
            <script src="https://www.google.com/recaptcha/api.js" async="async" defer="defer"/>
            <style>
                .captcha-wrapper {
                max-width: 100%;
                margin: 10px auto 18px;
                }
                .captcha-wrapper .g-recaptcha {
                transform: scale(0.85);
                transform-origin: 0 0;
                }
            </style>
        </xpath>
    </template>
