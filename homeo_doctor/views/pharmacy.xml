            <field name="print_report_name">'Prescription - ' + object.bill_number</field>
            <field name="binding_model_id" ref="model_pharmacy_description"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="homeo_doctor.paperformat_a3_landscape"/>
        </record>
