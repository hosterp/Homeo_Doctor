<odoo>
    <data>
        <report
                id="report_patient_challan_action"
                model="patient.reg"
                string="Challan Print"
                report_type="qweb-pdf"
                file="homeo_doctor.view_report_patient_challan"
                name="homeo_doctor.view_report_patient_challan"
        />

        <record id="view_report_patient_challan" model="ir.ui.view">
            <field name="name">report_patient_challan</field>
            <field name="model">patient.reg</field>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
                <t t-name="homeo_doctor.report_patient_challan">
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="doc">
                            <div class="page" style="width: 100%; height: 100vh; margin: 0; padding: 15px; ">

                                <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 20px; font-family: Arial, sans-serif;">
                                    <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                         style="width: 70px; height: 70px; border-radius: 50%; margin-right: 15px;"/>

                                    <div style="text-align: center;">
                                        <h1 style="font-size: 25px; margin: 0; font-weight: bold; color: #2c3e50;">Dr. PRIYA'S MULTI SPECIALITY HOSPITAL
                                        </h1>
                                        <p style="margin: 5px 0; font-size: 16px; color: #555;">EANIKKARA, KARAKULAM PO,
                                            THIRUVANANTHAPURAM -695 564
                                        </p>
                                        <p style="margin: 5px 0; font-size: 16px; color: #555;">Phone: 0471-2373004, Mobile No: 8590203321
                                            dpmshospital@gmail.com
                                        </p>
                                    </div>
                                </div>
                                <hr style="border: 2px solid #000; width: 60%; margin: 15px auto;"/>

                                <!-- Patient Information Table - Full Page Size -->
                                <table style="width: 100%; height: calc(100vh - 200px); border-collapse: collapse; font-size: 24px; margin-top: 20px;">
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; width: 30%; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            UHID:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.reference_no"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; width: 30%; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            Bill Number:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.bill_number"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">Patient
                                            Name:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.patient_id"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">Age:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.age"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">Gender:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.gender"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">Phone
                                            Number:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.phone_number"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">Doctor:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.doc_name.name"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            Department:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.department_id.display_name"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            Registration Fee:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.registration_fee.fee"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 9%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            Consultation Fee :
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 24px;">
                                            <t t-esc="doc.consultation_fee"/>
                                        </td>
                                    </tr>
                                    <tr style="height: 10%;">
                                        <td style="font-weight: bold; padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 26px; background-color: #f8f9fa;">Total
                                            Amount:
                                        </td>
                                        <td style="padding: 25px; border: 3px solid #000; vertical-align: middle; font-size: 26px; font-weight: bold; background-color: #f8f9fa;">
                                            <t t-esc="doc.register_total_amount"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>